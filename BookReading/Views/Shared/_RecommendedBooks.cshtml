@model IEnumerable<Book>

@foreach (var book in Model.Take(4))
{
    <div class="col-lg-3 col-md-6 pb-4">
        <div class="item">
            <img src="~/Public/images/@book.Image" style="height: 300px; object-fit: cover;">
            <h3>@book.Name</h3>
            @foreach (var author in book.Authors.ToList())
            {
                <p>@author.Fullname</p>
            }
            <h6><a href="~/Public/pdf/@book.BookPath" target="_blank">Read book</a></h6>
            <div class="hover">
                <a href="/Book/About/@book.Id">
                    <span><i class="fa fa-long-arrow-right" aria-hidden="true"></i></span>
                </a>
            </div>
        </div>
    </div>
}
