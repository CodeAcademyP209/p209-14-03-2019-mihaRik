@section scripts{
    <script>
        var skipCountMax = @Model.Books.Count();
        var skipCount = 5;

        $(document).ready(function () {
            $(document).on("click", "#showMoreBooks", function () {
                if (skipCount < skipCountMax) {
                    $.ajax({
                        url: "/Home/ShowMoreBooks",
                        data: { skipCount: skipCount},
                        method: "GET",
                        success: function (res) {
                            $("#recentBooksRow").append(res);
                            skipCount += 5;
                        }
                    })
                }
                else
                {
                    $("#showMoreBooks").hide();
                }
            })
        })
    </script>
}