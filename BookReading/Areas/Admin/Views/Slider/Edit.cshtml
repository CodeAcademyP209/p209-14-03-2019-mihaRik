@model SliderItem
@{
    ViewBag.Title = "Edit";
}

<h2>Edit slider</h2>
<div class="col-sm-6">

    <form method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(m => m.Title)
            @Html.TextAreaFor(m => m.Title, new { @class = "form-control", @id = "editor" })
            @Html.ValidationMessageFor(m => m.Title, null, new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Button)
            @Html.TextBoxFor(m => m.Button, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Button, null, new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label>Current image</label>
            <img src="~/Public/images/@Model.Image" class="img-thumbnail" width="400" />
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Photo)
            @Html.TextBoxFor(m => m.Photo, new { @class = "form-control", @type = "file", @accept = "image/*" })
            @Html.ValidationMessageFor(m => m.Photo, null, new { @class = "text-danger" })
        </div>

        <input type="submit" value="Update" class="btn btn-success" style="margin-bottom: 30px;" />
    </form>
</div>

@section scripts{
    <script src="https://cdn.ckeditor.com/4.11.3/standard/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('editor');
    </script>
}