@model IEnumerable<SliderItem>
@{
    ViewBag.Title = "Index";
}

<style>
    .slide {
        position: relative;
    }

        .slide .content {
            position: absolute;
            top: 0;
            width: 100%;
            background: rgba(0, 0, 0, 0.3);
            height: 100%;
            color: #fff;
            text-align: center;
            display: flex;
            align-items: center;
        }

            .slide .content .title {
                margin: 0 auto;
                text-align: center;
                width: 100%;
            }

                .slide .content .title h3 {
                    font-size: 30px;
                    text-transform: uppercase;
                    font-weight: 300;
                    margin-bottom: 15px;
                    color: white;
                }

                .slide .content .title h5 {
                    font-size: 24px;
                    text-transform: uppercase;
                    font-weight: 300;
                    margin-bottom: 40px;
                    color: white;
                }

    .owl-dots {
        position: absolute;
        bottom: 30px;
        width: 100%;
        text-align: center;
    }

    button.owl-dot {
        width: 10px;
        height: 10px;
        background: #fff;
        border-radius: 50%;
        margin: 0 5px;
    }

        button.owl-dot.active {
            background: #ff9700;
        }

    .btn {
        background: #ff9700;
        opacity: 1;
        color: #fff;
        text-transform: uppercase;
        padding: 15px 20px 11px;
        font-size: 14px;
        font-weight: 500;
        letter-spacing: 0.4px;
        border: 2px solid #ff9700;
        border-radius: 2px;
    }

    .overlay {
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,.8);
        position: absolute;
        top: 0;
        left: 0;
        transition: all .3s ease-in-out;
        opacity: 0;
    }
    .overlay:hover{
        opacity: 1;
    }
    .overlay a{
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }
</style>

<h2>Slider items</h2>

<div id="owl-demo" class="owl-carousel owl-theme">
    @foreach (var slider in Model)
    {
        <div class="item" style="margin-bottom: 40px;">
            <div class="slide">
                <img src="~/Public/images/@slider.Image" style="width: 100%;">
                <div class="content">
                    <div class="title">
                        @Html.Raw(slider.Title)
                        <a href="#" class="btn">@slider.Button</a>
                    </div>
                    <div class="overlay">
                        <a href="/Admin/Slider/Edit/@slider.Id" class="btn btn-primary">Edit</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>