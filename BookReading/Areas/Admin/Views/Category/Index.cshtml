@model IEnumerable<Category>
@{
    ViewBag.Title = "Index";
}

<h2>Categories</h2>

<a href="/Admin/Category/Create"class="btn btn-primary" style="margin-bottom: 20px;">Add category</a>

<div class="row">
    <div class="col-sm-4">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Name</td>
                        <td>
                            <a href="/Admin/Category/Edit/@category.Id" class="btn btn-primary">Edit</a>
                            <a href="/Admin/Category/Delete/@category.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>